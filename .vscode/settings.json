{
  "ruby.useLanguageServer": true,
  "ruby.useBundler": false,
  "ruby.format": "rubocop",
  "ruby.lint": {
    "rubocop": {
      "useBundler": false
    }
  },
  "files.associations": {
    "*.html.erb": "erb"
  },
  "vscode-erb-beautify.useBundler": true,
  "cSpell.words": [
    "zaico"
  ],
  "[erb]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.quickSuggestions": {
    "strings": true
  }
}